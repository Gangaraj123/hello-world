<div class="container my-4">
    <div class="row ">
        <% if(curr_blogs.length>0) { %>
            <h1 class="mx-5" style=" color: rgb(214, 19, 19);font-weight: 700;">
                All
                Blogs</h1>
            <% curr_blogs.forEach(blog=> { %>
                <div class="container col-md-5 my-4 mx-4 ">
                    <div class="card">
                        <div class="card-body">
                            <div style="float: left;" class="mx-2">
                                <img src="https://source.unsplash.com/200x180/?$<%=blog.category%>"
                                    alt="">
                            </div>
                            <h5 class="card-title">
                                <%=blog.Title %>
                            </h5>
                            <p class="card-text">
                                <%=blog.Body.slice(0,100)+"...." %>
                            </p>
                            <p>
                                <strong>category:</strong>
                                <%= blog.category%>
                                    <a href="/blog/view/<%=blog._id%>"
                                        class="btn-sm btn-success float-end">View
                                        Blog</a>
                            </p>

                        </div>
                    </div>
                </div>
                <% }) }else {%>
                    <div class="container m-4">
                        <h4>
                            There are No blogs to show.
                        </h4>
                        <p>Creat a blog here.</p>
                        <a href="/blog/create" class="btn btn-primary">
                            create a new blog
                        </a>
                    </div>
                    <% } %>
    </div>
</div>